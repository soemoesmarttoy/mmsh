<div id="<%= dom_id product %>">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= Category.find(product.category_id).name %>
  </p>

  <p>
    <strong>Unit price:</strong>
    <%= product.unit_price %>
  </p>

  <p>
    <strong>Unit:</strong>
    <%= Unit.find(product.unit_id).name %>
  </p>

  <p>
    <strong>Quantity:</strong>
    <%= product.quantity %>
  </p>

  <p>
    <strong>Warehouse:</strong>
    <%= Warehouse.find(product.warehouse_id).name %>
  </p>

  

</div>
