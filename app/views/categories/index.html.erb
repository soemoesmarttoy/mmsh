<h1>Categories</h1>
<%= link_to "New category", new_category_path, class: "btn btn-secondary" %>

<div id="categories">
  <table class="table">
  
  <% @categories.each do |category| %>
    <tr>
    <td>
    <%= render category %>
    </td>
    <td>
    <%= link_to "Edit", edit_category_path(category), class: "btn btn-secondary btn-sm" %>
    </td>
    <td>
    <%= button_to "Delete", category, method: :delete, class: "btn btn-secondary btn-sm" %>
    </td>
    </tr>
  <% end %>
  </table>
</div>

